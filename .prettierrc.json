{
  "semi": true,
  "singleQuote": false,
  "jsxSingleQuote": false,
  "trailingComma": "all",
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "endOfLine": "lf",
  "embeddedLanguageFormatting": "auto",
  "proseWrap": "always",
  "plugins": ["prettier-plugin-tailwindcss"],
  "tailwindAttributes": ["className", "class"],
  "tailwindFunctions": ["clsx", "twMerge", "twJoin", "cn"]
}
