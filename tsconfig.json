{
  "compilerOptions": {
    /* üöÄ Alinhado com Node 24 e APIs Modernas */
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    
    /* üõ°Ô∏è Rigor de Engenharia (Mantido seu excelente padr√£o) */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noUnusedLocals": true, 
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    
    /* ‚öôÔ∏è Compatibilidade e Build */
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    
    /* ‚ö° Next.js 15 & React 19 Performance */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    /* üó∫Ô∏è Caminhos Absolutos (Essencial para manter imports limpos) */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "mdx-components.tsx",
    "next.config.js",
    "next.config.mjs",
    "next.config.ts"
  ],
  "exclude": ["node_modules"]
}
